<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <body class="text-center signin-body">
    <form class="form-signin">
      <%= link_to root_path do %> 
        <%= image_tag 'celebration.svg', size: '72x72',class: 'mb-4' %>
    <% end %>
      <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>

      <div class="field">
        <%= f.label :email, class: 'sr-only'%><br />
        <%= f.email_field :email, autofocus: true, placeholder: 'Email address', autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :username, class: 'sr-only'%><br />
        <%= f.text_field :username, placeholder: 'Username', autocomplete: "username", class: 'form-control' %>
      </div>
      <br>

      <div class="field">
        <%= f.label :password, class: 'sr-only' %>

        <%= f.password_field :password, placeholder: 'Password', autocomplete: "new-password", class: 'form-control' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'sr-only' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password confirmation',class: 'form-control' %>
      </div>
      <br>

      <% if devise_mapping.rememberable? %>
        <div class="field checkbox mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block' %>
      </div>

      <p class="mt-5 mb-3 text-muted">&copy; 2020-2021</p>

    </form>

  </body>

  <% end %>
